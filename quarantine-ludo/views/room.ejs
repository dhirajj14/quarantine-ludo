<!DOCTYPE html>

  <head>
    <title><%= title %></title>
    <link rel="icon" href="/images/logo.png" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="room-body">
    <nav>
      <a href="localhost:3000">
        <img
          class="logo"
          src="/images/logo-brand.png"
          width="240px"
          alt="ludo-logo"
        />
      </a>
    </nav>
    <section class="room-main">
      <div class="room-wrapper">
        <div class="room-game-grid">
          <div class="room-chat">
            <aside class="chat">
              <ul id="chat-log"></ul>
              <form id="chat-form" action="#null">
                <input
                  id="message"
                  disabled="true"
                  name="message"
                  type="text"
                  autocomplete="off"
                />
                <button
                  id="send-button"
                  disabled="true"
                  name="send-button"
                  type="submit"
                >
                  Send
                </button>
              </form>
            </aside>
          </div>
        

          <div class="room-game-wrapper">
            <div class="container card">
                   <!-- First row -->
                  <div class="container-row1 clearfix">
                      <div class="row1-col1 green">
                          <div class="row1-col1-child clearfix white">
                              <div class="green"></div>
                              <div class="green"></div>
                              <div class="green"></div>
                              <div class="green"></div>
                          </div>
                      </div>
                      <div class="row1-col2 clearfix">
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div class="yellow"></div>
                          <div class="yellow"></div>
                          <div></div>
                          <div class="yellow"></div>
                          <div></div>
                          <div></div>
                          <div class="yellow"></div>
                          <div></div>
                          <div></div>
                          <div class="yellow"></div>
                          <div></div>
                          <div></div>
                          <div class="yellow"></div>
                          <div></div>
                      </div>
                      <div class="row1-col3 yellow">
                          <div class="row1-col3-child clearfix white">
                              <div class="yellow"></div>
                              <div class="yellow"></div>
                              <div class="yellow"></div>
                              <div class="yellow"></div>
                          </div>
                      </div>
                  </div>
          
                  <!-- Second row -->
                  <div class="container-row2 clearfix">
                      <div class="row2-col1 clearfix">
                          <div></div>
                          <div class="green"></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div class="green"></div>
                          <div class="green"></div>
                          <div class="green"></div>
                          <div class="green"></div>
                          <div class="green"></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                      </div>
                      <div class="row2-col2">
                          <!-- add triangular effect using html and css -->
                          <div class="contain-triangles">
                              <div class="triangle-right"></div>
                              <div class="triangle-up"></div>
                              <div class="triangle-left"></div>
                              <div class="triangle-down"></div>
                          </div>
                      </div>
                      <div class="row2-col3 clearfix">
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div class="blue"></div>
                          <div class="blue"></div>
                          <div class="blue"></div>
                          <div class="blue"></div>
                          <div class="blue"></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div class="blue"></div>
                          <div></div>
                      </div>
                  </div>
          
                  <!-- Third row -->
                  <div class="container-row3 clearfix">
                      <div class="row3-col1 red">
                          <div class="row3-col1-child clearfix white">
                              <div class="red"></div>
                              <div class="red"></div>
                              <div class="red"></div>
                              <div class="red"></div>
                          </div>
                      </div>
                      <div class="row3-col2 clearfix">
                          <div></div>
                          <div class="red"></div>
                          <div></div>
                          <div></div>
                          <div class="red"></div>
                          <div></div>
                          <div></div>
                          <div class="red"></div>
                          <div></div>
                          <div></div>
                          <div class="red"></div>
                          <div></div>
                          <div class="red"></div>
                          <div class="red"></div>
                          <div></div>
                          <div></div>
                          <div></div>
                          <div></div>
                      </div>
                      <div class="row3-col3 blue">
                          <div class="row3-col3-child clearfix white">
                              <div class="blue"></div>
                              <div class="blue"></div>
                              <div class="blue"></div>
                              <div class="blue"></div>
                          </div>
                      </div>
                  </div>
          </div>
        </div>
          <div class="room-link">
            <form id="join-form">
              <input
                id="join-name"
                placeholder="Enter Name"
                name="join-name"
                type="text"
                autocomplete="off"
              />
              <button id="join-button">Join Call</button>
            </form>
          </div>

          <div class="room-video-grid">
            <div class="room-video">
              <div class="player-name" id="p1">Player 1</div>
              <video
                class="room-video-stream"
                id="self-video"
                width="100%"
                height="100%"
                autoplay
                playsinline
              ></video>
            </div>
            <div class="room-video">
              <div class="player-name" id="p2">Player 2</div>
              <video
                id="peer-video"
                class="room-video-stream"
                width="100%"
                height="100%"
                autoplay
                playsinline
              ></video>
            </div>
            <div class="room-video">
              <div class="player-name">Player 3</div>
              <video
                class="room-video-stream"
                width="100%"
                height="100%"
                autoplay
                playsinline
              ></video>
            </div>
            <div class="room-video">
              <div class="player-name">Player 4</div>
              <video
                class="room-video-stream"
                width="100%"
                height="100%"
                autoplay
                playsinline
              ></video>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script>
      window.NAMESPACE = `<%- namespace %>`;
    </script>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
    <script src="javascripts/room.js"></script>
  </body>
</html>
